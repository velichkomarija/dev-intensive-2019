<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="cv_borderWidth" format="dimension"/>
        <attr name="cv_borderColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AvatarImageViewMask">
        <attr name="aivm_borderColor" format="color"/>
        <attr name="aivm_borderWidth" format="dimension"/>
        <attr name="aivm_initials" format="string"/>
    </declare-styleable>

    <declare-styleable name="AvatarImageViewShader">
        <attr name="aivs_borderColor" format="color"/>
        <attr name="aivs_borderWidth" format="dimension"/>
        <attr name="aivs_initials" format="string"/>
    </declare-styleable>

    <declare-styleable name="AvatarImageView">
        <attr name="aiv_borderColor" format="color"/>
        <attr name="aiv_borderWidth" format="dimension"/>
        <attr name="aiv_initials" format="string"/>
    </declare-styleable>

    <attr name="colorAccentedSurface" format="reference"/>
    <attr name="colorDivider" format="reference"/>
    <attr name="colorIcon" format="reference"/>

    <!--Color for DAY and NIGHT themes-->
    <attr name="colorToolbar" format="reference"/>
    <attr name="colorBackground" format="reference"/>
    <attr name="colorItemView" format="reference"/>
    <attr name="colorCounter" format="reference"/>
    <attr name="colorArchiveIcon" format="reference"/>
    <attr name="colorSwipe" format="reference"/>
    <attr name="colorSelected" format="reference"/>
    <attr name="colorSnackBar" format="reference"/>
    <attr name="colorChipCloseTint" format="reference"/>
    <attr name="colorChipBackground" format="reference"/>
    <attr name="colorIndicator" format="reference"/>
    <attr name="colorText" format="reference"/>
    <attr name="colorTitle" format="reference"/>
    <attr name="colorSnackBarText" format="reference"/>

</resources>